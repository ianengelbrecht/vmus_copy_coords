{
  "name": "VMUS Copy Coordinates",
  "description": "Adds a button to copy coordinates from a record conveniently",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/vm.png",
      "32": "/images/vm.png",
      "48": "/images/vm.png",
      "128": "/images/vm.png"
    }
  },
  "icons": {
    "16": "/images/vm.png",
    "32": "/images/vm.png",
    "48": "/images/vm.png",
    "128": "/images/vm.png"
  },
  "content_scripts": [
    {
      "matches": ["https://vmus.adu.org.za/vm_view*"],
      "css": ["toast.css"]
    }
  ]
}